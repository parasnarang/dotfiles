# Git
# (more aliases in ~/.oh-my-zsh/plugins/git)
alias gd='git diff'
compdef _git gd=git-diff
alias gs='git status'
compdef _git gs=git-status
alias glg='git log'
compdef _git glg=git-log
alias gp='git push origin master'

# To make cd simpler 
alias cd..="cd .."
alias cd..2="cd ../.."
alias cd..3="cd ../../.."
alias cd..4="cd ../../../.."
alias cd..5="cd ../../../../.."
function mkdircd () { mkdir -p "$@" && eval cd "\"\$$#\""; }

# General
alias l='ls -lha'
alias ccc='clear'
alias v='vim'

# django server
alias sss='python manage.py runserver'
# python server
alias ppp='python -m SimpleHTTPServer'

# Personal Folder stuff
alias webroot='cd /Library/WebServer/Documents/'
alias codechef='cd /Volumes/Data/repos/algorithmic-arena/codechef'
alias repo='cd /Volumes/Data/repos/'
alias algos='cd /Volumes/Data/code/algos/doneprogs/ && v .'
alias wr='cd Work/Repos'
